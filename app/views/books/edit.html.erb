<% content_for(:head) do -%>
	<%= javascript_include_tag "simple-bookshelf/BookForm"%>
<% end -%>
<h2 style="margin-bottom:0"><%= I18n.t("sb.headers.new_book") %></h2>
<div style="margin-bottom:25px">
	<% if @book.updated_at %>
	<%= "#{I18n.t("sb.headers.book_updated_at")}: #{@book.updated_at.strftime("%d.%m.%Y, %H:%M:%S")}" %>
	<% end %>
</div>
<%= simple_form_for(@book, 
		:url => book_path(@book), :method => :put,
		:html => {:class => 'form_vertical', :id => 'edit_book_form', :multipart => true}) do |f| %>
	<%= partial "form", :book => @book, :f => f %>
	<%= f.submit I18n.t("sb.forms.buttons.update_book"), :class => "btn btn-primary" %>
<% end %>
<script type="text/javascript">
	new BookForm();
</script>
