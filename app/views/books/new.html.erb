<% content_for(:head) do -%>
	<%= javascript_include_tag "simple-bookshelf/BookForm"%>
<% end -%>
<h2><%= I18n.t("sb.headers.new_book") %></h2>
<%= simple_form_for(@book, 
	:html => {:id => 'new_book_form', :class => 'form_vertical', :multipart => true}) do |f| %>
	<%= partial "form", :book => @book, :f => f %>
	<%= f.submit I18n.t("sb.forms.buttons.create_book"), :class => "btn btn-primary" %>
<% end -%>
<script type="text/javascript">
	BookForm.observeTitleField();
</script>